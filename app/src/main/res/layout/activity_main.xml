<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:textAlignment="viewStart" android:scrollbarStyle="insideInset"
        android:requiresFadingEdge="vertical">
    <EditText
            android:layout_width="395dp"
            android:layout_height="79dp"
            android:background="#E8E8E8" android:id="@+id/textBox" android:hint="@string/TextBox_Label"
            android:autofillHints="none" android:inputType="text"
            android:scrollbars="vertical" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="394dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Spinner
            android:layout_width="326dp"
            android:layout_height="48dp" android:id="@+id/userSelection"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="537dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="33dp"/>
    <TextView
            android:text="@string/Type_Label"
            android:layout_width="274dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="506dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="33dp"/>
    <TextView
            android:layout_width="274dp"
            android:layout_height="20dp"
            android:id="@+id/infoBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="336dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="@string/calculate"
            android:layout_width="152dp"
            android:layout_height="48dp" android:id="@+id/calcButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="643dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>